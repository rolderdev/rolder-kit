{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "ES6"
    ],
    "declaration": true,
    "listEmittedFiles": true,
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "rootDir": "src",
  "include": [
    "./app.ts",
    "./src/types.d.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}