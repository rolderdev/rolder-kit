{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],  
  "pipeline": {
    "build": {      
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**",
        "!build/cache/**"
      ]        
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}